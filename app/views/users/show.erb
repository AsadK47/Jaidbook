<div class='user-info'>
  <h1 class='title'><%= @user.email%></h1>
    <div class='user-buttons'>
      <% if current_user.id == @user.id %>
      <a <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-info' %></a>
      <% end %>
    </div>

</div>
<div class="user-tabs">
<a class="tab active" href="">
  <i class="fa fa-th"></i>
  WALL
</a>
<a class="tab" href="">
  <i class="fa fa-tv"></i>
  POSTS
</a>
<a class="tab" href="">
  <i class="fa fa-bookmark"></i>
  FRIENDS
</a>
</div>

<% if current_user.id != @user.id %>
  <div class='each-post'>
    <h3>Post on your friend's wall:</h3>
    <br>
    <%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field(:title, { :class => 'form-control' } ) %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area(:body, { :class => 'form-control' } ) %>
    </p>
    <p>
      <%= f.submit({:class => 'btn btn-success'}) %>
    </p>
    <p>
       <input type="hidden" name="posted_to" value="<%= @user.id %>" />
    </p>
    <% end %>
  <% end %>
  </div>

<div class ='profile-container'>
  <div class='logic'>
    <h3>Posts</h3>
  <% if @posts != nil %>
    <% @posts.each do |post| %>
        <div class='each-post'>
          <h3><%= post.title %></h3>
          <p><%= truncate(post.body) %></p>
          <p><%= post.created_at %></p>
          <a><%= link_to "Read More", post_path(post), :class => 'btn btn-info' %></a>
        </div>
    <% end %>
  <% else %>
    <h2>No posts yet :/</h2>
    <br>
    <a class="nav-link" <%= link_to "Post something!", new_post_path %> </a>
  <% end %>
  </div>

  <div class='logic'>
      <h3>Friends</h3>
    <% if @freinds != nil %>
      <% @friends.each do |friend| %>
          <div class='each-post'>
            <h3><%= friend.email %></h3>
            <p> Joined on <%= friend.created_at %></p>
            <a><%= link_to "View Profile", post_path(post), :class => 'btn btn-success' %></a>
        </div>
      <% end %>
    <% else %>
    <div class='each-post'>
      <h3>No friends yet :/</h3>
      <br>
      <a <%= link_to "Add friends", users_all_path, :class => 'btn btn-success' %> </a>
    </div>
    <% end %>
  </div>

  <div class='logic'>
    <h3>Wall</h3>
  <% if @posts != nil %>
      <% @allposts.each do |post| %>
        <% if post.posted_to == "#{@user.id}" %>
        <div class='each-post'>
          <h3><%= post.title %></h3>
          <p><%= truncate(post.body) %></p>
          <p><%= post.email %> at <%= post.created_at %></p>
          <a><%= link_to "Read More", post_path(post), :class => 'btn btn-info' %></a>
        </div>
        <% end %>
    <% end %>
  <% end %>
  </div>
</div>

